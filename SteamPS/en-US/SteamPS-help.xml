    <command:examples>
      <command:example>
        <maml:title>-------------------------- EXAMPLE 1 --------------------------</maml:title>
        <dev:code>Install-SteamCMD</dev:code>
        <dev:remarks>
          <maml:para>Installs SteamCMD in C:\Program Files\SteamCMD.</maml:para>
